{
  "skill_name": "demand-forecasting",
  "version": "1.0.0",
  "description": "Cost-driven demand forecasting for passenger vehicles (EV, PHEV, ICE)",
  "default_parameters": {
    "end_year": 2035,
    "logistic_ceiling": 1.0,
    "smoothing_window": 3,
    "standard_forecast_years": [
      2030,
      2035
    ],
    "extended_forecast_year": 2035,
    "max_forecast_year": 2035,
    "max_market_cagr": 0.05,
    "phev_peak_share": 0.15,
    "phev_decay_half_life": 3.0,
    "logistic_k_bounds": [
      0.05,
      1.5
    ],
    "logistic_t0_offset": [
      -5,
      10
    ]
  },
  "regions": [
    "China",
    "USA",
    "Europe",
    "Rest_of_World",
    "Global"
  ],
  "products": {
    "market": "Passenger_Vehicles",
    "disruptor": "BEV_Cars",
    "chimera": "PHEV_Cars",
    "incumbent": "ICE_Cars",
    "ev_cars": "EV_Cars"
  },
  "output_formats": [
    "csv",
    "json",
    "plot"
  ],
  "data_sources": {
    "curves": "Passenger_Cars.json",
    "taxonomy": "passenger_vehicles_taxonomy_and_datasets.json",
    "methodology": "instructions_editable.md"
  },
  "validation_rules": {
    "non_negative_demand": true,
    "sum_consistency": true,
    "market_cagr_cap": 0.05,
    "share_bounds": [
      0.0,
      1.0
    ]
  },
  "dependencies": [
    "numpy",
    "scipy",
    "pandas",
    "matplotlib"
  ]
}