{
  "skill_name": "datacenter-ups",
  "version": "1.0.0",
  "description": "Datacenter UPS battery technology transition (VRLA â†’ Li-ion)",
  "default_parameters": {
    "start_year": 2020,
    "end_year": 2040,
    "tco_horizon_years": 15,
    "discount_rate": 0.08,
    "smoothing_window": 3,
    "tipping_persistence_years": 3
  },
  "regions": ["China", "USA", "Europe", "Rest_of_World", "Global"],
  "output_formats": ["csv", "json", "plot"],
  "data_sources": {
    "vrla_demand": "datacenter_battery_demand_lab.json",
    "lithium_demand": "datacenter_battery_demand_li_ion.json",
    "vrla_installed_base": "datacenter_vrla_installed_base.json",
    "lithium_costs": "bess_4hour_turnkey_costs.json",
    "vrla_costs": "vrla_battery_costs.json",
    "growth_rates": "datacenter_ups_growth.json",
    "taxonomy": "datacenter_ups_taxonomy_and_datasets.json"
  },
  "cost_parameters": {
    "vrla": {
      "capex_per_kwh": 220.0,
      "opex_per_kwh_year": 18.0,
      "capex_trajectory": "flat",
      "regional_multipliers": {
        "China": 0.9,
        "USA": 1.0,
        "Europe": 1.15,
        "Rest_of_World": 1.0
      }
    },
    "lithium": {
      "capex_source": "bess_proxy",
      "opex_per_kwh_year": 6.0,
      "capex_trajectory": "declining",
      "ups_reliability_premium": 1.08,
      "learning_rate": 0.15
    }
  },
  "lifespans": {
    "vrla_years": 5,
    "lithium_years": 12
  },
  "s_curve_parameters": {
    "ceiling_L": 0.95,
    "midpoint_t0": null,
    "base_steepness_k0": 0.5,
    "cost_sensitivity_s": 0.002,
    "calibration_method": "least_squares",
    "bounds": {
      "L": [0.90, 0.99],
      "t0": [2020, 2040],
      "k0": [0.1, 2.0],
      "s": [0.0, 0.01]
    }
  },
  "market_decomposition": {
    "new_build_growth_source": "datacenter_growth_rates",
    "replacement_from_installed_base": true,
    "contestable_market": "vrla_at_eol"
  },
  "battery_metrics": {
    "duration_hours": 4,
    "cycles_per_year": 250,
    "round_trip_efficiency": 0.88,
    "depth_of_discharge": 0.8
  },
  "validation_rules": {
    "total_demand_tolerance": 0.05,
    "mass_balance_tolerance": 0.001,
    "non_negativity": true,
    "monotonic_adoption": true
  },
  "cost_forecasting": {
    "method": "log_cagr",
    "historical_window_years": 5,
    "smoothing_years": 3,
    "cap_annual_decline": 0.30,
    "floor_cost_ratio": 0.20
  },
  "tipping_point_detection": {
    "metric": "tco_difference",
    "threshold": 0,
    "persistence_years": 3,
    "early_warning_threshold": 50
  },
  "scenarios": {
    "baseline": {
      "description": "Current cost trajectories and adoption patterns",
      "lithium_cost_decline_rate": 0.08,
      "vrla_cost_change": 0.0,
      "adoption_acceleration": 1.0
    },
    "accelerated": {
      "description": "Faster Li-ion cost decline, early tipping",
      "lithium_cost_decline_rate": 0.12,
      "vrla_cost_change": 0.0,
      "adoption_acceleration": 1.5
    },
    "delayed": {
      "description": "Slower cost parity, extended VRLA dominance",
      "lithium_cost_decline_rate": 0.05,
      "vrla_cost_change": -0.02,
      "adoption_acceleration": 0.7
    },
    "high_opex": {
      "description": "Emphasize operational cost advantages",
      "lithium_cost_decline_rate": 0.08,
      "vrla_cost_change": 0.0,
      "adoption_acceleration": 1.2,
      "opex_weight_multiplier": 1.5
    }
  },
  "output_columns": {
    "core": [
      "year",
      "region",
      "vrla_demand_mwh",
      "lithium_demand_mwh",
      "total_demand_mwh",
      "lithium_share_pct"
    ],
    "tco": [
      "vrla_tco_per_kwh",
      "lithium_tco_per_kwh",
      "cost_advantage",
      "tipping_year"
    ],
    "installed_base": [
      "vrla_installed_base_mwh",
      "lithium_installed_base_mwh",
      "total_installed_base_mwh"
    ],
    "market_segments": [
      "new_build_demand_mwh",
      "replacement_demand_mwh",
      "contestable_market_mwh"
    ]
  },
  "dependencies": [
    "numpy",
    "pandas",
    "scipy",
    "matplotlib",
    "seaborn"
  ]
}