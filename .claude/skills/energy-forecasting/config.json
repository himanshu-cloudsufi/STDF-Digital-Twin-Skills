{
  "skill_name": "energy-forecasting",
  "version": "1.0.0",
  "description": "Cost-driven forecasting for Solar-Wind-Battery (SWB) energy systems and fossil fuel displacement",

  "default_parameters": {
    "end_year": 2035,
    "smoothing_window": 3,
    "standard_forecast_years": [2030, 2035],
    "extended_forecast_year": 2040,
    "max_forecast_year": 2040,
    "battery_duration_hours": 4,
    "battery_cycle_life": 5000,
    "battery_cycles_per_year": 250,
    "battery_rte": 0.88,
    "battery_fixed_om": 5.0,
    "coal_reserve_floor": 0.10,
    "gas_reserve_floor": 0.15,
    "capacity_factor_improvement": 0.003,
    "energy_balance_tolerance": 0.02,
    "csp_threshold": 0.01,
    "max_yoy_growth": 0.50,
    "min_capacity_factor": 0.05,
    "max_capacity_factor": 0.70
  },

  "displacement_sequence": {
    "China": "coal_first",
    "USA": "gas_first",
    "Europe": "coal_first",
    "Rest_of_World": "coal_first"
  },

  "swb_components": [
    "Solar_PV",
    "Onshore_Wind",
    "Offshore_Wind",
    "Battery_Storage",
    "CSP"
  ],

  "incumbent_technologies": [
    "Coal_Power",
    "Natural_Gas_Power"
  ],

  "non_swb_technologies": [
    "Nuclear",
    "Hydro",
    "Other_Renewables"
  ],

  "regions": [
    "China",
    "USA",
    "Europe",
    "Rest_of_World",
    "Global"
  ],

  "capacity_factors": {
    "default": {
      "Solar_PV": 0.15,
      "CSP": 0.25,
      "Onshore_Wind": 0.30,
      "Offshore_Wind": 0.40,
      "Coal_Power": 0.55,
      "Natural_Gas_Power": 0.50,
      "Nuclear": 0.85,
      "Hydro": 0.45
    },
    "fallback_hierarchy": [
      "historical_data",
      "regional_average",
      "global_average",
      "default"
    ]
  },

  "battery_duration_options": {
    "2": {
      "dataset_suffix": "2_Hour",
      "description": "2-hour duration battery storage"
    },
    "4": {
      "dataset_suffix": "4_Hour",
      "description": "4-hour duration battery storage"
    },
    "8": {
      "dataset_suffix": "8_Hour",
      "description": "8-hour duration battery storage"
    }
  },

  "lcoe_fallback_multipliers": {
    "Coal_Power": {
      "China": 1.0,
      "USA": 1.2,
      "Europe": 1.3,
      "Rest_of_World": 1.1
    },
    "Natural_Gas_Power": {
      "China": 1.1,
      "USA": 1.0,
      "Europe": 1.4,
      "Rest_of_World": 1.2
    }
  },

  "validation_rules": {
    "energy_balance_tolerance": 0.02,
    "non_negativity": true,
    "smooth_transitions": true,
    "max_yoy_jump": 0.50,
    "reserve_floors_enforced": true,
    "capacity_factor_bounds": true
  },

  "output_options": {
    "formats": ["csv", "json", "both"],
    "default_format": "csv",
    "output_directory": "output"
  },

  "data_files": {
    "taxonomy": "data/swb_taxonomy_and_datasets.json",
    "energy_generation": "data/Energy_Generation.json",
    "energy_storage": "data/Energy_Storage.json",
    "electricity": "data/Electricity.json"
  },

  "methodology": {
    "cost_analysis": "LCOE + SCOE calculation",
    "tipping_detection": "SWB stack cost vs min(Coal_LCOE, Gas_LCOE)",
    "capacity_forecast": "YoY growth averaging",
    "generation_derivation": "Capacity × CF × 8760",
    "displacement_logic": "Sequenced coal-first or gas-first",
    "validation": "Energy balance + non-negativity + reserve floors"
  },

  "notes": {
    "terminology": "See CLAUDE.md for preferred terminology (transformation not transition, stellar energy not renewable)",
    "independence": "This skill is fully self-contained with no cross-skill dependencies",
    "data_source": "Uses curves_catalog_files/ data copied to skill's data/ directory"
  }
}
